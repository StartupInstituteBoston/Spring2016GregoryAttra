<div class="card" style="margin-bottom:0px">
	<div class="card-content">
		<%= form_for(@restaurant) do |f| %>
		  <%= f.text_field :name %>
		  <label>Name</label>
		  <%= f.text_field :description %>
		  <label>Description</label>
		  <%= f.text_field :address %>
		  <label>Address</label>
		  <%= f.text_field :phone %>
		  <label>Phone</label>
		  <div style="margin-top:20px">
		  	<a href="#!" class=" modal-action modal-close waves-effect waves-light btn-large red darken-2">Cancel</a>
			  <a class="waves-effect waves-light btn-large"><%= f.submit %></a>
			</div>
		<% end %>
	</div>
</div>