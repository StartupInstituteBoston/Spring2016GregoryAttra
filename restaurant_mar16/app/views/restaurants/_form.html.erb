<div class="col s6">
	<div class="row">
		<div class="card">
			<div class="card-content">
				<%= form_for(@restaurant) do |f| %>
					<label>Name</label>
				  <%= f.text_field :name %>
				  <label>Description</label>
				  <%= f.text_field :description %>
				  <label>Address</label>
				  <%= f.text_field :address %>
				  <label>Phone</label>
				  <%= f.text_field :phone %>
				  <div>
				  	<%= link_to "Cancel", { action: "index" }, :class => "waves-effect waves-light btn-large red darken-2" %>
					  <a class="waves-effect waves-light btn-large"><%= f.submit %></a>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>